---
interface Props {
    // num => indica la cantidad de divs o paginas que va a disponer el carrousel 
	num: number;
}

const { num } = Astro.props;

import CarrouselReact from './CarrouselReact';
    
---
<CarrouselReact client:load num={num}>
<slot/>
</CarrouselReact>

<style is:global>
    .carrousel{
        margin: 1em 0;
        overflow: hidden;
        padding: 1em 0;
    }
    .carrousel .carrousel__dots{
        display: flex;
        justify-content: center;
        gap: 1.5em;
    }
    .carrousel .carrousel__dot{

    }
    .carrousel .carrousel__dot::after{
    content: "";
    display: block;
    width: .6em;
    aspect-ratio: 1/1;
    border-radius: 50%;
    background-color: black;
    }

    .carrousel .carrousel__dot.active::after{
    transform: scale(1.5);
    transform-origin: center;
    transition: transform 2s ease-in;
    }
    .carrousel__movil{
        display: grid;
        grid-template-columns: 1fr 4fr 1fr;
        grid-template-rows: 1fr;
        grid-column-gap: 0px;
        grid-row-gap: 0px;

        justify-items: center;
        align-items: center;
    }

    .carrousel__visible{
        overflow: hidden;
        width: 100%;
        grid-area: 1 / 2 / 2 / 3;
    }

    .carrousel .carrousel__content{
        
        width: calc(100% * var(--num));
        display: flex;
        background: blue;
        transition: .5s all;
    }
    .carrousel .carrousel__content div  {
        width: calc(100% / var(--num));
        
    }
    .carrousel .carrousel__arrow{
        cursor: pointer;
    }
    .carrousel .carrousel__arrow--left{
        grid-area: 1 / 1 / 2 / 2;
    }
    .carrousel .carrousel__arrow--rigth{
        grid-area: 1 / 3 / 2 / 4;
    }
</style>
